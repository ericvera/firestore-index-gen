{
  "name": "firestore-index-gen",
  "version": "0.2.5",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "bin": {
    "fig": "./dist/index.js"
  },
  "files": [
    "dist",
    "!/**/__test__",
    "!*.test.*"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc --build",
    "lint": "eslint .",
    "smoke": "yarn build && yarn lint",
    "-- PRE-COMMIT HOOKS --": "",
    "localAfterInstall": "husky || true",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "packageManager": "yarn@4.3.0",
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^22.10.2",
    "eslint": "^9.16.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "pinst": "^3.0.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ericvera/firestore-index-gen"
  },
  "keywords": [
    "firebase",
    "firestore",
    "index",
    "generator",
    "cli",
    "emulator"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx,mjs}": "eslint --cache",
    "*": "prettier --ignore-unknown --write"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "find-up": "^7.0.0",
    "jest-diff": "^29.7.0"
  }
}
